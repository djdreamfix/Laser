name: SwiftUI Package CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  build:
    runs-on: macos-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install dependencies
        run: swift package resolve

      - name: Build
        run: swift build

      - name: Test
        run: swift test
